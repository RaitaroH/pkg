#!/usr/bin/env sh

help() {
    echo "pkg help -- work in progress"
    # TODO: Add documentation.
}

info() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -Qi "$@" ;;
        xbps) xbps-query "$@" ;;
        apt) apt show "$@" ;;
    esac
}

install() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -S "$@" ;;
        xbps) xbps-install -S "$@" ;;
        apt) apt install "$@" ;;
    esac
}

list() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -Q "$@" ;;
        xbps) xbps-query -l "$@" ;;
        apt) apt list "$@" ;;
    esac
}

search() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -Ss "$@" ;;
        xbps) xbps-query -Rs "$@" ;;
        apt) apt search "$@" ;;
    esac
}

upgrade() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -Syu "$@" ;;
        xbps) xbps-install -Su "$@" ;;
        apt) apt update && apt upgrade "$@" ;;
    esac
}

version() {
    echo "pkg version 0.1.0"
}

# Determine which package manager to use.
if command -v pacman >/dev/null; then
    PKG_MAN="pacman"
elif command -v xbps-install >/dev/null; then
    PKG_MAN="xbps"
elif command -v apt >/dev/null; then
    PKG_MAN="apt"
else
    echo "Unsupported package manager." >&2
fi

# Exit and print help if no arguments are passed.
if [ $# -lt 1 ]; then
    help
    exit 0
fi

case "$1" in
    h|help)
        help
        ;;

    info)
        info "$@"
        ;;

    install)
        install "$@"
        ;;

    list)
        list "$@"
        ;;

    search)
        search "$@"
        ;;

    upgrade)
        upgrade "$@"
        ;;

    -v|--version|version)
        version
        ;;

    *)
        printf "Unknown option: %s\n\n" "$*"
        help
        ;;
esac
