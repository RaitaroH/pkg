#!/usr/bin/env sh

clean() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -Sc ;;
        xbps) xbps-remove -O ;;
        apt) apt clean ;;
    esac
}

help() {
    echo "\
Usage:
    pkg [options] [target]

Example:
    pkg search package
    pkg info package
    pkg upgrade

Options:
    clean       clean up all local caches
    help        print this message
    info        see package info
    install     install a package
    list        show all packages in local repository
    remove      remove a package(s) by name
    search      search for a package in repositories
    upgrade     perform full system upgrade
    version     show version of this tool

Version:
    0.1.0

Source:
    https://github.com/vednoc/pkg"
}

info() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -Qi "$@" ;;
        xbps) xbps-query "$@" ;;
        apt|pkcon) apt show "$@" ;;
    esac
}

install() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -S "$@" ;;
        xbps) xbps-install -S "$@" ;;
        apt|pkcon) apt install "$@" ;;
    esac
}

list() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -Q "$@" ;;
        xbps) xbps-query -l "$@" ;;
        apt|pkcon) apt list "$@" ;;
    esac
}

remove() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -Rs "$@" ;;
        xbps) xbps-remove -R "$@" ;;
        apt) apt remove "$@" ;;
    esac
}

search() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -Ss "$@" ;;
        xbps) xbps-query -Rs "$@" ;;
        apt|pkcon) apt search "$@" ;;
    esac
}

upgrade() {
    shift
    case "$PKG_MAN" in
        pacman) pacman -Syu "$@" ;;
        xbps) xbps-install -Su "$@" ;;
        apt) apt update && apt upgrade "$@" ;;
        pkcon) pkcon refresh && pkcon update ;;
    esac
}

version() {
    echo "pkg version 0.1.0"
}

# Determine which package manager to use.
if command -v pacman >/dev/null; then
    PKG_MAN="pacman"
elif command -v xbps-install >/dev/null; then
    PKG_MAN="xbps"
elif command -v apt >/dev/null; then
    PKG_MAN="apt"
elif command -v pkcon >/dev/null; then
    PKG_MAN="pkcon"
else
    echo "Unsupported package manager." >&2
fi

# Exit and print help if no arguments are passed.
if [ $# -lt 1 ]; then
    help
    exit 0
fi

case "$1" in
    clean)
        clean
        ;;

    h|help)
        help
        ;;

    info)
        info "$@"
        ;;

    i|install)
        install "$@"
        ;;

    ls|list)
        list "$@"
        ;;

	rm|remove)
        remove "$@"
        ;;

    s|search)
        search "$@"
        ;;

    u|upgrade)
        upgrade "$@"
        ;;

    -v|--version|version)
        version
        ;;

    *)
        printf "Unknown option: %s\n\n" "$*"
        help
        ;;
esac
